
<div class="container">
<h1>Edit this restaurant</h1>
<%= simple_form_for [@restaurant] do |f| %>
<%= f.input :name %>
<%= f.input :phone_number %>
<%= f.input :address %>
<%= f.label :category %>
<%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %><br>
<%= f.submit "Edit a restaurant", class: "btn btn-primary" %>
<% end %>
</div>
